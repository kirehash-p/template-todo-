generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id    Int    @id @default(autoincrement())
  title String
  deadline DateTime?
  deadline_include_time Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Completed {
  id    Int    @id @default(autoincrement())
  title String
  deadline DateTime?
  deadline_include_time Boolean
  completedAt DateTime
  createdAt DateTime
  updatedAt DateTime @updatedAt
}
